            {{ form_label(billingform.amount, 'Montant payé', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(billingform.amount, {'attr': {'class': 'form-control'}}) }}
        </div>
     {{ form_end(billingform) }}
</div>

{% endblock %}
