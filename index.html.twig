{% extends 'base.html.twig' %}

{% block title %}Hello ContractController!{% endblock %}

{% block body %}
 <div class="container bg-warning">
 <h1 class= text-primary>Formulaire de Contrat</h1>
 {{ form_start(contractform) }}
<div class="form-group">
            {{ form_label(contractform.vehicle_uid, 'UID du véhicule') }}
            {{ form_widget(contractform.vehicle_uid, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(contractform.customer_uid, 'UID du client') }}
            {{ form_widget(contractform.customer_uid, {'attr': {'class': 'form-control'}}) }}
        </div>
        <!-- Ajoutez les classes 'form-control' aux autres champs de formulaire selon votre besoin -->
        <div class="form-group">
            {{ form_label(contractform.sign_datetime, 'Date de signature') }}
            {{ form_widget(contractform.sign_datetime, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(contractform.loc_begin_datetime, 'Date de début de location') }}
            {{ form_widget(contractform.loc_begin_datetime, {'attr': {'class': 'form-control'}}) }}
        </div>
        <!-- Ajoutez les autres champs de formulaire ici -->
         <div class="form-group">
            {{ form_label(contractform.loc_end_datetime, 'Date de fin de location') }}
            {{ form_widget(contractform.loc_end_datetime, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(contractform.returning_datetime, 'Date de rendu du véhicule') }}
            {{ form_widget(contractform.returning_datetime, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(contractform.price, 'Prix facturé pour le contrat') }}
            {{ form_widget(contractform.price, {'attr': {'class': 'form-control'}}) }}
        </div>
       
        {{ form_end(contractform) }}
    </div>

{% endblock %}
